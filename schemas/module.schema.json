{
  "$id": "https://zero2pro.dev/schema/module",
  "title": "Zero-2-Pro Module Front-Matter",
  "type": "object",
  "required": ["id", "track", "level", "title"],
  "additionalProperties": true,
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "track": { "type": "string", "minLength": 1 },
    "level": { "type": "integer", "minimum": 0, "maximum": 4 },
    "title": { "type": "string", "minLength": 1 },

    "time": { "type": "string" },

    "prerequisites": {
      "type": "array",
      "items": { "type": "string" }
    },

    "outcomes": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },

    "assessment": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } },
        { "type": "object" }
      ]
    },

    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },

    "archived_url": { "type": "string", "format": "uri" },
    "lang": { "type": "string" }
  }
}
